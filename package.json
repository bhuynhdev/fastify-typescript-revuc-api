{
  "name": "fastify-typescript-revuc-api",
  "version": "1.0.0",
  "description": "Node.js boilerplate using fastify & TypeScript",
  "type": "module",
  "scripts": {
    "lint": "pnpm exec eslint .",
    "lint:fix": "pnpm exec eslint . --fix",
    "check:types": "tsc --noEmit",
    "build": "pnpm exec swc ./src -d build",
    "build:docker:prod": "docker build . -t my-fastify-app --build-arg APP_ENV=production",
    "start": "node build/index.js",
    "dev": "tsx watch src .env | pino-pretty --colorize",
    "pretest": "npm run build",
    "test": "vitest",
    "test:watch": "vitest -w",
    "db:push": "pnpm drizzle-kit push:pg --config=./drizzle.config.ts",
    "db:studio": "pnpm exec drizzle-kit studio --config=./drizzle.config.ts",
    "db:seed": "pnpm exec tsx drizzle/seed.ts"
  },
  "prisma": {
    "seed": "pnpm exec tsx prisma/seed.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bhuynhdev/fastify-typescript-revuc-api.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "nodejs",
    "fastify",
    "typescript"
  ],
  "author": "Bao Huynh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bhuynhdev/fastify-typescript-revuc-api.git/issues"
  },
  "homepage": "https://github.com/bhuynhdev/fastify-typescript-revuc-api.git#readme",
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/multipart": "^7.7.3",
    "@fastify/swagger": "^8.12.1",
    "@fastify/swagger-ui": "^2.0.1",
    "@fastify/type-provider-typebox": "^3.5.0",
    "@prisma/client": "5.7.1",
    "@sinclair/typebox": "^0.31.28",
    "@tidyjs/tidy": "^2.5.2",
    "ajv": "^8.12.0",
    "bcrypt": "^5.1.1",
    "drizzle-orm": "^0.29.1",
    "drizzle-typebox": "^0.1.1",
    "env-schema": "^5.2.1",
    "fast-csv": "^4.3.6",
    "fastify": "^4.25.1",
    "fastify-plugin": "^3.0.1",
    "mysql2": "^3.6.5",
    "postgres": "^3.4.3"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.101",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^18.19.3",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.20.7",
    "esbuild": "^0.14.54",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "pg": "^8.11.3",
    "pino-pretty": "^8.1.0",
    "prettier": "^2.8.8",
    "prisma": "^5.7.1",
    "tsx": "^3.14.0",
    "typescript": "^5.3.3",
    "vitest": "^0.25.8"
  }
}
